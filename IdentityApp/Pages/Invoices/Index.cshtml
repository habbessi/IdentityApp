@page
@model IdentityApp.Pages.Invoices.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Invoices List</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Invoice[0].InvoiceAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Invoice[0].InvoiceMonth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Invoice[0].InvoiceOwner)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Invoice[0].Status)
            </th>
            <th>
                <a asp-page="Create" class="btn btn-sm btn-success"><i class="fa-solid fa-plus"></i> New</a>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Invoice) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.InvoiceAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InvoiceMonth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InvoiceOwner)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.InvoiceId" class="btn btn-sm btn-primary">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.InvoiceId" class="btn btn-sm btn-warning">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.InvoiceId" class="btn btn-sm btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
